<%- include('partials/header.ejs')%>
<div class="container">

      
   <div class="form form-abm">
      
      <form action="" method="POST" enctype="multipart/form-data" >
         <div class="h1 ml-3"> 
            <label for="">Ingreso de Nuevo producto</label>
         </div>  
         <div class='form-group col-md-10 ml-2 mt-4'>    
            <i class="fas fa-tags"></i>  
            <label for="nombre">Nombre del Vino</label>                    
            <input id="producto" class="form-control border" name="nombre" type="text">
         </div>
         <div class="form-group col-md-10 ml-2">
            <i class="far fa-file-alt"></i>
            <label for="descrpicion">Descripcion</label>
            <textarea class="form-control " name= "descripcion" type="textArea" id="textArea" rows="3"></textarea>
         </div>
        
         <div class='form-group col-md-10 ml-2'>
            <i class="fas fa-wine-glass-alt"></i>
            <label>Cepa: </label>
            <select id="cepa" name="cepa" class="form-control">
               <% for (let i=0; i<cepas.length ;i++){ %>
               <option value="<%= cepas[i].id %>"><%=cepas[i].name %></option>
               <% } %>
            </select>    
         </div>
        
         <div class="form-group col-md-10 ml-2">
            <i class="far fa-image"></i>
            <label type="text" for="imagen">Seleccione la imagen</label>
            <input type="file" class="form-control-file border" id="imagen"name="imagen">
         </div>
        
         <div class='form-group col-md-10 ml-2'>    
            <i class="fas fa-dollar-sign"></i>  
            <label for="nombre">Precio</label>                    
            <input id="precio" class="form-control border" name="precio" type="number">
         </div>


          <div class="d-flex justify-content-center">
             <a href="/products"><button class="btn btn-secundary m-2 btn-lg"  type="button"><i class="fas fa-undo-alt"></i> Volver</button></a> 
             <button class='btn btn-danger btn-lg m-2'  type="reset" value='limpiar'> <i class="fas fa-eraser"></i> Borrar</button>
             <button class='btn btn-success btn-lg m-2 ' type="submit" value='cargaDatos'><i class="fas fa-glass-cheers"></i> Ingresar</button>
          </div> 
       </form>           
   </div>

</div>
<%- include('partials/footer.ejs')%>   